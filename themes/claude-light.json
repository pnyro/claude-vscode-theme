		"chat.slashCommandBackground": "#C15F3C66",
		"chat.slashCommandForeground": "#a94d2f",
		"chat.editedFileForeground": "#8b7d6b",

		"debugToolBar.background": "#ebe9e4",
		"keybindingLabel.foreground": "#2d2820"
